<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grarybackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ui_10_dip">

        <ImageView
            android:id="@+id/lehead"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/my_face_icon" />
        <ImageView
            android:id="@+id/imgs"
            android:src="@mipmap/pao1"
            android:layout_toRightOf="@id/lehead"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lecontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imgs"
            android:background="@drawable/tackbg"
            android:padding="@dimen/ui_10_dip"
            android:text="@string/album" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ui_10_dip">

        <ImageView
            android:id="@+id/rihead"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/my_face_icon" />

        <TextView
            android:id="@+id/ricontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:layout_toLeftOf="@id/img"
            android:background="@drawable/button"
            android:padding="@dimen/ui_10_dip"
            android:text="@string/album" />
        <ImageView
            android:id="@+id/img"
            android:src="@mipmap/pao"
            android:layout_toLeftOf="@id/rihead"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>