    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/ui_10_dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期:"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay1"
            android:padding="@dimen/ui_10_dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上月抄表数:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/sbiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期:"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay2"
            android:padding="@dimen/ui_10_dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本月抄表数:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/bbiao"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期:"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay3"
            android:padding="@dimen/ui_10_dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用电度数:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/dian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期:"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:textSize="17sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay4"
            android:padding="@dimen/ui_10_dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单价:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/ymoneys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期:"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:textSize="17sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay9"
            android:padding="@dimen/ui_10_dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应缴金额:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/pmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期:"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay5"
            android:padding="@dimen/ui_10_dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实缴金额:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/smoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期:"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay6"
            android:padding="@dimen/ui_10_dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/ymoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期:"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:textSize="17sp" />
        </LinearLayout>
    </RelativeLayout>

    <Button
