        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ui_10_dip"
        android:background="@drawable/button"
        android:text="立即缴费"
        android:textColor="@color/white"
        android:textSize="17sp" />
</LinearLayout>