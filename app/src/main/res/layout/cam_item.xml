<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <TextView
        android:text="活动"
        android:textSize="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/white"
        android:background="@color/graly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/title"
        android:lines="1"
        android:text="活动"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/ui_10_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/banner"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="110dp" />
        <ImageView
            android:id="@+id/statimg"
            android:src="@mipmap/indexstateend"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/timelay"
        android:layout_width="match_parent"
        android:background="@color/touming"
        android:layout_marginTop="-30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/time"
            android:text="活动时间:2016-4-11~2016-4-15"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="立即参加>"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/ui_10_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>