<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/title"
    android:text="东湖小区"
    android:textSize="20sp"
    android:textColor="@color/blackcolor"
    android:layout_width="fill_parent"
    android:padding="20dp"
    android:layout_height="wrap_content" />
    <View
        android:background="@color/linecolor"
        android:layout_width="fill_parent"
        android:layout_height="1dp"></View>
    <TextView
        android:id="@+id/adress"
        android:layout_width="fill_parent"
        android:text="@string/action_settings"
        android:textColor="@color/graly"
        android:padding="@dimen/ui_10_dip"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/yanzheng"
        android:layout_width="fill_parent"
        android:text="@string/action_settings"
        android:textColor="@color/graly"
        android:padding="@dimen/ui_10_dip"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/linecolor"
        android:layout_width="fill_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:padding="@dimen/ui_10_dip"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/defaults"
            android:text="设为默认"
            android:drawableLeft="@mipmap/checkbox_blue_unselected"
            android:drawablePadding="@dimen/ui_10_dip"
            android:layout_weight="1"
            android:textColor="@color/graly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/del"
            android:drawableLeft="@mipmap/feature_addr_delete"
            android:text="删除"
            android:drawablePadding="@dimen/ui_10_dip"
            android:layout_marginRight="@dimen/ui_10_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e8e8e8"
        >

    </LinearLayout>

</LinearLayout>