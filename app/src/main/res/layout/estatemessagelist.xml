<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<ImageView
    android:id="@+id/face"
    android:src="@mipmap/my_face_icon"
    android:padding="@dimen/ui_10_dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_toRightOf="@id/face"
        android:gravity="center_vertical"
        android:padding="@dimen/ui_10_dip"
        android:layout_marginTop="@dimen/ui_10_dip"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/username"
            android:textColor="@color/blackcolor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:ellipsize="end"
            android:text="@string/action_settings" />
        <TextView
            android:id="@+id/title"
            android:textColor="@color/graly"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:ellipsize="end"
            android:text="@string/action_settings" />
    </LinearLayout>


    <TextView
        android:id="@+id/time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/graly"
        android:layout_below="@id/face"
        android:layout_marginRight="@dimen/ui_10_dip"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="@dimen/ui_10_dip"
        android:text="@string/action_settings" />
</RelativeLayout>