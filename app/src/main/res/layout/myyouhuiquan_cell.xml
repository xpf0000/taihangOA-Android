<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="110dp"
    android:paddingTop="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#E9004F"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/myyouhuiquan_cell_price"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:text="￥50"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/myyouhuiquan_cell_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="优惠券"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/myyouhuiquan_cell_dis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="无门槛使用"
                    android:textSize="14sp"
                    />


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/myyouhuiquan_cell_time"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="2016-10-17至2016-10-17"
            android:textSize="15sp"
            android:layout_marginTop="1dp"
            />



    </LinearLayout>

    <ImageView
        android:layout_width="9dp"
        android:layout_height="match_parent"
        android:src="@mipmap/fenge_youhuiquan"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="#FFD202"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/myyouhuiquan_cell_state"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#333333"
            android:text=""
            android:textSize="26sp"
            android:textStyle="bold"

            />

</LinearLayout>

    </LinearLayout>