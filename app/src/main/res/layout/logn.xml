<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grarybackground"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonbule">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:src="@mipmap/news_info_back_arrow01" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="17sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/linecolor"></LinearLayout>
    <EditText
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:drawableLeft="@mipmap/phone_no_icon"
        android:hint="手机号"
        android:drawablePadding="10dp"
        android:lines="1"
        android:padding="10dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:textSize="16sp"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:lines="1"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/password_icon"
        android:hint="密码"
        android:padding="10dp"
        android:password="true"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/submit"
        android:layout_margin="10dp"
        android:text="登陆"
        android:textColor="@color/white"
        android:background="@mipmap/btn_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:padding="@dimen/ui_10_dip"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/reg"
            android:text="立即注册"
            android:textColor="#21ADFD"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/newpa"
            android:text="忘记密码？"
            android:textColor="#666666"
           android:layout_marginRight="@dimen/ui_10_dip"
            android:gravity="right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#cfcfcf"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用第三方账号登陆"
            android:textColor="#969696" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="#cfcfcf"></View>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:padding="@dimen/ui_10_dip"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sina_login_icon"
            android:src="@mipmap/my_login_sina3x"
            android:textColor="@color/buttonbule"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/my_login_wx3x"
            android:src="@mipmap/my_login_wx3x"
            android:textColor="@color/buttonbule"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/qq_login_icon"
            android:src="@mipmap/my_login_qq3x"
            android:textColor="@color/buttonbule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>