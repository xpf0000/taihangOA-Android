<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="#f9f9f9"
        android:layout_marginLeft="@dimen/ui_10_dip"
        android:layout_marginRight="@dimen/ui_10_dip"
        android:layout_height="fill_parent">
<LinearLayout
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingTop="12sp"

    android:paddingLeft="@dimen/ui_10_dip"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/userhead"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/my_face_icon" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:orientation="vertical">
        <TextView
            android:text="aaa"
            android:textColor="@color/butbg"
            android:id="@+id/username"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
        <TextView
            android:text="aaa"
            android:textColor="@color/graly"
            android:id="@+id/time"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
    </LinearLayout>
</LinearLayout>
    <TextView
        android:text="aaa"
        android:textColor="@color/blackcolor"
        android:id="@+id/comtent"
        android:textSize="16sp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="@dimen/ui_10_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:layout_marginRight="@dimen/ui_10_dip"
            android:background="#cbcbcb"></LinearLayout>
    </LinearLayout>

</LinearLayout>